<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    card_view:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_light"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">


        <com.iaz.higister.data.model.FontTextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:paddingTop="10dp"
            android:layout_margin="20dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/item_buttom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="choose"
            android:textColor="@color/blue"
            android:layout_below="@id/item_title"
            android:clickable="true"
            android:focusable="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_below="@id/item_buttom"
            android:orientation="horizontal">

        <!--<ImageView-->
            <!--android:id="@+id/item_image"-->
            <!--android:layout_width="140dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:adjustViewBounds="true"-->
            <!--android:padding="6dp" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/item_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_small_body"
                android:textColor="@color/white"
                android:maxLines="8"/>

        </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/interestsPrimary"
            style="@style/LinearLayout.Interests"
            android:layout_below="@+id/item_title"
            android:visibility="gone">

            <com.iaz.higister.data.model.FontTextView
                android:id="@+id/interest_1"
                style="@style/TextView.Interest" />

            <com.iaz.higister.data.model.FontTextView
                android:id="@+id/interest_2"
                style="@style/TextView.Interest" />

            <com.iaz.higister.data.model.FontTextView
                android:id="@+id/interest_3"
                style="@style/TextView.Interest" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/interestsSecondary"
            style="@style/LinearLayout.Interests"
            android:layout_below="@+id/interestsPrimary"
            android:layout_marginTop="5dp"
            android:visibility="gone">

            <com.iaz.higister.data.model.FontTextView
                android:id="@+id/interest_4"
                style="@style/TextView.Interest" />

            <com.iaz.higister.data.model.FontTextView
                android:id="@+id/interest_5"
                style="@style/TextView.Interest" />
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>