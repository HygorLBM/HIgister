<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:fillViewport="true"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/type_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="80dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="Now, add the type of the list"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/type_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/type_header"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_margin="40dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="If your list have a specific type, you can select the corresponding in the spinner below.\n\n
If selected, all the items in the list will have the same type of the list and only results of the corresponding type will appear in the searches to pre-populate these items.\n\n
The following types are available for now: \n\nMovies, TV Series, Animes, Mangas, Books, Musics and Comics\n\n
If your list does not belong to neither of the previous groups or if the elements of your list will be from different types, you can select the Misc option in the spinner below or just proceed"
            android:textColor="@color/white"
            android:textSize="12sp"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/type_details"
            android:layout_centerVertical="true"
            android:layout_marginEnd="80dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="40dp">

            <Spinner
                android:id="@+id/list_type_spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                android:background="@color/white" />

            <!--<TextView-->
            <!--android:id="@+id/text_view_area_error"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginStart="4dp"-->
            <!--android:layout_marginTop="4dp"-->
            <!--android:text="@string/label_area_error"-->
            <!--android:textColor="@color/md_red_500"-->
            <!--android:textSize="12sp"-->
            <!--android:visibility="gone" />-->

        </android.support.design.widget.TextInputLayout>

    </RelativeLayout>
</ScrollView>