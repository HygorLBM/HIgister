<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iaz.higister" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:name="com.iaz.higister.Application"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.iaz.higister.ui.main.MainActivity"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name="com.iaz.higister.ui.splash.SplashActivity"
            android:label="@string/app_name" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name="com.iaz.higister.ui.search.SearchActivity"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name="com.iaz.higister.ui.createList.CreateListActivity"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name="com.iaz.higister.ui.viewList.ViewListActivity"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name="com.iaz.higister.ui.createItem.CreateItemActivity"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name="com.iaz.higister.ui.viewItem.ViewItemActivity"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name="com.iaz.higister.ui.profile.ProfileActivity"
            android:label="@string/app_name" >

        </activity>

        <activity
            android:name="com.iaz.higister.ui.login.AuthActivity"
            android:label="@string/app_name" >
        </activity>

        <service android:name="com.iaz.higister.data.SyncService"/>

        <receiver
            android:name="com.iaz.higister.data.SyncService$SyncOnConnectionAvailable"
            android:enabled="false">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
